  <main class="payment-page">
    <style>
        .payment-page {
            font-family: Arial, Helvetica, sans-serif;
            background-color: #f3f3f3;
            margin: 0;
            padding: 20px;
        }

        .container {
            max-width: 400px;
            margin: auto;
            background: white;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0.1);
        }

        h2 {
            font-size: 18px;
            margin-bottom: 16px;
        }

        .payment-option {
            display: flex;
            align-items: center;
            gap: 10px;
            border: 1px solid #ddd;
            border-radius: 12px;
            margin-bottom: 10px;
            cursor: pointer;
            transition: background-color 0.2s ease;
        }
        
        .payment-option:hover {
            background-color: #f8f8f8;
        }
        
        .details {
            font-size: 14px;
            margin-top: 20px;
            margin-bottom: 20px;
        }

        .total {
            border-top: 1px solid #ccc;
            padding-top: 8px;
            font-weight: bold;
            color: red;
        }

        .continue-button {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 9px;
            background-color: red;
            color: white;
            padding: 12px;
            border: none;
            font-size: 16px;
            width: 100%;
            cursor: pointer;
            transition: background-color 0.2s ease;
        }

        .continue-button:hover {
            background-color: darkred;
        }

        .arrow {
            display: inline-block;
            transform: translateX(2px);
        }

        @media (max-width: 600px) {
            .container {
                padding: 16px;
            }

            h2 {
                font-size: 16px;
            }

            .continue-button {
                font-size: 15px;
            }
        }
    </style>

    <div class="container">
        <h2>Select Payment Below</h2>
        <div class="payment-option">
            <img src="https://upload.wikimedia.org/wikipedia/commons/0/04/Visa.svg" alt="Visa" height="30">
            <img src="https://upload.wikimedia.org/wikipedia/commons/2/2a/Mastercard-logo.svg" alt="Mastercard" height="30">
